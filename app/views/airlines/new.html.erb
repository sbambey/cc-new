<% provide(:title, "New Airline") %>
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@airline, :html => {role: "form", class: "question-form"}) do |f| %>
		  <div class="form-group">
		    <%= f.text_field :name, class: "form-control", placeholder: "Airline name" %>
		    <%= f.label :name, class: "sr-only" %>
		  </div>
		  <div class="form-group">
		    <%= f.text_field :description, class: "form-control",
		    placeholder: 'Course description (eg. "Approaches to Literature")' %>
		    <%= f.label :description, class: "sr-only" %>
		  </div>
		  <div class="form-group">
		    <%= f.text_field :professor, class: "form-control", placeholder: "Professor's name" %>
		    <%= f.label :professor, class: "sr-only" %>
	    </div>
			<%= f.submit "Add Course", class: "btn btn-default" %>
		<% end %>
	</div>
</div>