<% provide(:title, 'New Airline') %>
<div class='col-xs-12'>
	<h1>Add an airline</h1>
	<%= form_for(@airline, :html => {role: 'form'}) do |f| %>
	  
	  <div class='form-group'>
	    <%= f.text_field :name, class: 'form-control', placeholder: 'Airline name' %>
	    <%= f.label :name, class: 'sr-only' %>
	  </div>

	  <div class='form-group'>
	    <%= f.text_field :country, class: 'form-control', placeholder: 'Country' %>
	    <%= f.label :country, class: 'sr-only' %>
	  </div>

		<div class='form-group'>  	  
			<%= f.file_field :logo %>
			<%= f.label :logo, class: 'sr-only' %>	
	  </div>

		<%= f.submit 'Add Airline', class: 'btn btn-default' %>
	<% end %>
</div>