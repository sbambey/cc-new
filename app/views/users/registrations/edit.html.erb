<% provide(:title, "Edit") %>

<div id="title">
  <div class="container">
    <div class="col-xs-12">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
    </div>
  </div>
</div>

<%= render partial: "shared/form_errors" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%= render partial: "general", locals: { f: f } %>

  <%= render partial: "shared/flight_time", locals: { f: f } %>

  <%= render partial: "shared/medical", locals: { f: f } %>

  <div class="container">
    <div class="col-xs-12">
      <%= f.submit "Save Changes", class: "btn btn-default standard-margin" %>
    </div>
  </div>

<% end %>

<div class="container">
  <div class="col-xs-12">
    <%= button_to "Cancel my account", registration_path(resource_name), 
        data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default standard-margin btn-submit" %>
  </div>
</div>