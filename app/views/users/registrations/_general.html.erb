<section id="general">
  <div class="container">
    <div class="col-xs-12 col-md-10 col-md-offset-1">

      <h4>General</h4>

      <%= render partial: "users/registrations/general/devise_basics", locals: { f: f } %>

      <div class="row standard-margin">
        <div class="col-md-4 col-xs-12">
          <%= render partial: "shared/text_field", 
            locals: { 
              f: f, 
              attribute: :full_name, 
              args: {
                placeholder: "Full Name", 
                label_class: "control-label" 
              } 
            } %>
        </div>

        <% if params[:controller] == "users/registrations" && params[:action] == "edit" %>
          <div class="col-md-4 col-xs-12">
            <div class="form-group">
              <div><%= f.label :birthdate, class: "control-label" %></div>
              <%= f.date_select :birthdate, {start_year: 1930}, class: "form-control selectpicker", "data-width" => "auto" %>
            </div>
          </div>
        
          <div class="col-md-4 col-xs-12">
            <%= render partial: "shared/text_field", 
            locals: { 
              f: f, 
              attribute: :nationality, 
              args: {
                placeholder: "List all of your nationalities", 
                label_class: "control-label" 
              } 
            } %>
          </div>

          <div class="col-md-4 col-xs-12">
            <%= render partial: "shared/text_field", 
            locals: { 
              f: f, 
              attribute: :language, 
              args: {
                placeholder: "Spoken languages", 
                label_class: "control-label" 
              } 
            } %>
          </div>
        <% end %>
      </div>

      <% if params[:controller] == "users/registrations" && params[:action] == "edit" %>
      <div class="checkbox">
        <label>
          <%= f.check_box :high_school_diploma %> I have a high school diploma
        </label>
      </div>

      <div class="checkbox">
        <label>
          <%= f.check_box :post_secondary_degree %> I have a completed college/university degree
        </label>
      </div>
      <% end %>
    </div>
  </div>
</section>