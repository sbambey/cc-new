<% provide(:title, "New Post") %>
<%= render "header" %>
<div class="container blog-container">
	<div class="col-xs-12 col-md-6 col-md-offset-3">
		<h1>New Post</h1>
		<%= form_for [@blog_post.user, @blog_post], url: user_blog_posts_path(@blog_post.user, @blog_post), :html => {role: "form"} do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control title" %>
			</div>

			<div class="form-group">
				<%= f.label :subtitle %>
				<%= f.text_field :subtitle, class: "form-control title" %>
			</div>

			<div class="form-group">
				<%= f.label :content %>
				<%= f.text_area :content, class: "form-control content" %>
			</div>

			<%= f.submit "Save Post", class: "btn btn-default standard-margin btn-submit" %>
		<% end %>
	</div>
</div>