<% provide(:title, "All Jobs") %>
<div class="search-bar">
	<div class="container">
		<div class="col-xs-12 col-md-10 col-md-offset-1 text-center">
			<%= form_for board_path, method: 'get', html: { id: "jobs-search" } do %>
				<%= text_field_tag :search, params[:search], class: "form-control search-input", 
				placeholder: 'i.e. "Empire Airlines", "First Officer" or "Cessna 208"' %>
				Search <em><%= @job_count %> pilot jobs</em> from <em><%= @airline_count %> airlines</em> across the United States
			<% end %>
		</div>
	</div>
</div>

<%= render "layouts/flash_messages" %>

<div class="container standard-margin">
	<div class="col-xs-12 col-md-10 col-md-offset-1">
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Airline</th>
					<th>Status</th>
					<th>Posted</th>
				</tr>
			</thead>
			<tbody id="jobs">
				<%= render "shared/jobs" %>
			</tbody>
		</table>

		<%= render "shared/board_notice" %>

		<table class="table added-jobs-table">
			<tbody id="added-jobs"></tbody>
		</table>
		<% if @jobs.next_page %>
			<%= bts_will_paginate(@jobs, {endless: true}) %>
		<% end %>
	</div>
</div>
