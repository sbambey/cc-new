<% provide(:title, "New opportunity") %>
<div class="container">
	<div class="col-xs-12">
		<h1>Add an opportunity</h1>
	</div>
</div>
<%= form_for([@airline, @fly], url: airline_fly_index_path(@airline, @fly), :html => {role: "form"}) do |f| %>
  
  <div class="container">
  	<div class="col-xs-12">
			<h4>General</h4>
			<div class="form-group">
				<%= f.text_field :name, class: "form-control", placeholder: "Opportunity name" %>
		  	<%= f.label :name, class: "sr-only" %>
		  </div>

		  <div class="checkbox standard-margin">
      	<label>
        	<%= f.check_box :general_recruitment %><p>General recruitment?</p>
        </label>
      </div>

		  <div class="checkbox standard-margin">
      	<label>
        	<%= f.check_box :no_match %><p>Do not match to users</p>
        </label>
      </div>

			<h4>Head Table</h4>
		  <table class="table table-bordered thick-border standard-margin">
		  	<tr>
					<td>
				    <%= f.text_field :position, class: "form-control", placeholder: "Position" %>
				    <%= f.label :position, class: "sr-only" %>
					</td>
					<td>
			    	<%= f.text_field :equipment, class: "form-control", placeholder: "Equipment" %>
			    	<%= f.label :equipment, class: "sr-only" %>
				  </td>
				  <td>
			    	<%= f.text_field :base, class: "form-control", placeholder: "Base" %>
			    	<%= f.label :base, class: "sr-only" %>
				  </td>
					<td>
				    <%= f.text_field :posting_expiry_as_string, class: "form-control", placeholder: "Expires" %>
				    <%= f.label :posting_expiry_as_string, class: "sr-only" %>
					</td>
					<td>
				    <%= f.text_field :website, class: "form-control", placeholder: "Website" %>
				    <%= f.label :website, class: "sr-only" %>
					</td>
		  	</tr>
		  </table>

		</div>
	</div>

  <%= render partial: "shared/flight_time", locals: { f: f, resource: @fly } %>

  <%= render partial: "shared/license", locals: { f: f, resource: @fly } %>

  <%= render partial: "shared/medical", locals: { f: f, resource: @fly } %>

  <div class="container">
  	<div class="col-xs-12">
  		<h4>Additional requirements</h4>
	  	<div id="to-append"></div>
	  	<a href="#" class="add-field">[+] Add a requirement</a>
	  	<a href="#" class="remove-field">[-] Remove selected</a>
	  </div>
	</div>

  <div class="container">
  	<div class="col-md-4">

  		<h4>Automatic consistency monitoring</h4>

  		<%= render partial: "shared/text_field", 
	      locals: { 
	        f: f, 
	        attribute: :content_selector, 
	        args: {
	          placeholder: "Content selector"
	        } 
	      } %>

	    <div class="checkbox standard-margin">
      	<label>
        	<%= f.check_box :no_track %><p>Do not track</p>
        </label>
      </div>
  	</div>
  </div>

	<div class="container">
		<div class="col-xs-12">
			<%= f.submit "Add opportunity", class: "btn btn-default standard-margin btn-submit" %>
		</div>
	</div>
<% end %>