<% provide(:title, "New opportunity") %>
<div class="container">
	<div class="col-xs-12">
		<h1>Add an opportunity</h1>
	</div>
</div>
<%= form_for([@airline, @fly], url: airline_fly_index_path(@airline, @fly), :html => {role: "form"}) do |f| %>
  
  <div class="container">
  	<div class="col-xs-12">
			<h4>General</h4>
			<div class="form-group">
				<%= f.text_field :name, class: "form-control", placeholder: "Opportnity Name" %>
		  	<%= f.label :name, class: "sr-only" %>
		  </div>

			<h4>Head Table</h4>
		  <table class="table table-bordered table-thick-border standard-margin">
		  	<tr>
					<td>
				    <%= f.text_field :position, class: "form-control", placeholder: "Position" %>
				    <%= f.label :position, class: "sr-only" %>
					</td>
					<td>
			    	<%= f.text_field :equipment, class: "form-control", placeholder: "Equipment" %>
			    	<%= f.label :equipment, class: "sr-only" %>
				  </td>
				  <td>
			    	<%= f.text_field :base, class: "form-control", placeholder: "Base" %>
			    	<%= f.label :base, class: "sr-only" %>
				  </td>
					<td>
				    <%= f.text_field :expiration, class: "form-control", placeholder: "Expires" %>
				    <%= f.label :expiration, class: "sr-only" %>
					</td>
					<td>
				    <%= f.text_field :website, class: "form-control", placeholder: "Website" %>
				    <%= f.label :website, class: "sr-only" %>
					</td>
		  	</tr>
		  </table>

		  <!--<h4>Intro</h4>
		  <%= f.cktext_area :intro, value: "<h3>Intro</h3>" %>-->
		</div>
	</div>

  <%= render partial: "shared/flight_time", locals: { f: f, resource: @fly } %>

  <%= render partial: "shared/medical", locals: { f: f, resource: @fly } %>

  <%= render partial: "shared/additional", locals: { f: f, resource: @fly } %>

	<!--<tr id="hidden_field">
		<td>
			<%= text_field_tag "fly[requirements][category][]", nil, placeholder: "Category", class: "form-control" %>
			<a href="#" class="remove_field">[x] Remove requirement</a>
		</td>
		<td><%= text_field_tag "fly[requirements][value][]", nil, placeholder: "Value", 
							class: "form-control" %></td>
	</tr>

  <a href="#" class="add_fields">[+] Add Requirement</a>-->

  <!--<h4 class="standard-margin">Content</h4>
  <%= f.cktext_area :content %>-->

	<div class="container">
		<div class="col-xs-12">
			<%= f.submit "Add Opportunity", class: "btn btn-default standard-margin" %>
		</div>
	</div>
<% end %>