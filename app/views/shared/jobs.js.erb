<% if params[:add_records].present? %>
	$("#added-jobs").append('<%=j render("shared/jobs") %>');
<% else %>
	$("#jobs").html('<%=j render("shared/jobs") %>');
	$("#added-jobs").html('')
<% end %>
<% if @jobs.next_page %>
  $('.pagination').replaceWith('<%=j bts_will_paginate(@jobs, {endless: true}) %>');
  $('#add-records').show();
<% else %>
  $('#add-records').hide();
<% end %>