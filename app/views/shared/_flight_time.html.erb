<section id="flight-time">
  <div class="container">
    <div class="col-xs-12">

      <h4>Flight Time</h4>

      <p>Please enter all times in <em>decimal hours</em> (ie. 5.5, rather than 5:30)</p>

      <table class="table table-bordered table-thick-border table-black-border standard-margin">
        <% FLIGHT_HOUR_TYPES.each_slice(2) do |group| %>
          <tr>
            <% group.each do |type, description| %>
              <td><%= f.label type, description, class: "control-label label-margin" %></td>
              <td>
                <%= content_tag :div, 
                  class: ["form-group", ("has-error has-feedback" if resource.errors.full_messages_for(type).any?)] do %> 
                  
                    <%= f.text_field type, value: (("0" if action_name == "new") || resource.send(type)), 
                          class: "form-control" %>
                  
                    <% if resource.errors.full_messages_for(type).any? %>
                      <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                      <span class="error-explanation">
                        <%= resource.errors[type].first.capitalize %>
                      </span>
                    <% end %>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>

      <h4>Rating</h4>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= f.select :rating, RATINGS.values, {include_blank: true}, class: "form-control" %>
        </div>
      </div>
      
     
    </div>
  </div>
</section>