<%= content_tag :div, class: ["form-group", ("has-error has-feedback" if args[:errors].present?)] do %>
	<%= f.label method, class: "#{args[:label_class] || ""}" %>
	<%= f.text_field method, class: "#{args[:field_class] || "form-control"}", placeholder: "#{args[:placeholder] || ""}" %>

	<% if args[:errors].present? %>
		<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
		<span class="error-explanation">
	    <%= args[:errors].first %>
	  </span>
	<% end %>
<% end %>