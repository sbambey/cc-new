<% if user_signed_in? %>
	<div class="container">
		<div class="col-xs-12">
			<% if @flies.empty? %>
				<div class="alert alert-warning" role="alert">
					Currently no opportunities were found given your information.
					<%= link_to "Edit your information", edit_user_registration_path %>
				</div>
			<% else %>
				<table class="table lighter">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th>Opportunity</th>
							<th>Posting Date</th>
							<th>Posting Expiry</th>
							<th>Recent Position(s)</th>
						</tr>
					</thead>
					<% @flies.each do |fly| %>
					<tr>
						<td><%= image_tag("boarding.gif", class: "boarding") if fly.airline.has_active_recruitment? %></td>
						<td><%= image_tag fly.airline.logo, class: "airline-table-logo" %></td>
						<td><%= link_to fly.name, airline_fly_path(fly.airline, fly) %></td>
						<td><%= fly.posting_date_as_string %></td>
						<td><%= fly.posting_expiry_as_string %></td>
						<td></td>
					</tr>
					<% end %>
				</table>
			<% end %>
		</div>
	</div>
<% else %>
  <div class="container">
		<div class="col-xs-12">
			<div class="jumbotron text-center">
				<h2>Welcome</h2>
				<hr class="small">
				<p>CockpitCareers allows aspiring pilots to track employment opportunities available to them.</p>

				<p>Simply give us your current experience and flight hours and we will match you with opportunities from around the world.</p>
				<p class="small">Note: CockpitCareers is in an early test phase</p>
				<%= link_to "Get started", new_user_registration_path, class: "btn btn-danger btn-lg" %>
			</div>
			<h3 class="text-center">Here are some airlines currently recruiting</h3>
			<hr class="medium">

				<table class="table lighter">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th>Airline</th>
						<th>Hiring Status</th>
						<th>Newest opportunity</th>
					</tr>
				</thead>
				<% @airlines.each do |airline| %>
				<tr>
					<td><%= image_tag("boarding.gif", class: "boarding") if airline.has_active_recruitment? %></td>
					<td><%= image_tag airline.logo, class: "airline-table-logo" %></td>
					<td><%= link_to airline.name, airline_path(airline) %></td>
					<td><%= airline.has_active_recruitment? ? "Active" : "Inactive" %></td>
					<td><%= link_to airline.flies.last.name, airline_fly_path(airline, airline.flies.last) %></td>
				</tr>
				<% end %>
			</table>

		</div>
	</div>
<% end %>