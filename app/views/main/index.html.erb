<% if user_signed_in? %>
	<div class="container">
		<div class="col-xs-12">
			<% if current_user.updated_at > Time.new(2015,1,30) %>
				<div class="alert alert-warning" role="alert">
					<strong>Alert:</strong> We have made some changes to your account flight hour settings. Please take a look and update them if necessary.
				</div>
			<% end %>
			<% if @flies.empty? %>
				<div class="alert alert-warning" role="alert">
					We were not able to find opportunities applicable to the flight hours provided.
				</div>
			<% else %>
				<div class="panel panel-default">
					<div class="panel-body">
						Welcome to your personal JobBoard! Below are opportunities that you are currently eligible for.
					</div>
				</div>

				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th>Airline</th>
							<th>Opportunity</th>
							<th>Last updated</th>
						</tr>
					</thead>
					<tbody>
						<% @flies.each do |fly| %>
						<tr>
							<td><%= image_tag("boarding6.gif", class: "boarding") %></td>
							<td><%= display_image(fly.airline.logo) %></td>
							<td><%= link_to fly.airline.name, airline_path(fly.airline) %></td>
							<td><%= link_to fly.name, airline_fly_path(fly.airline, fly) %></td>
							<td><%= "#{time_ago_in_words(fly.updated_at)} ago" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			<% end %>
		</div>
	</div>
<% end %>