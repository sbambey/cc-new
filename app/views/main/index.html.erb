<% if user_signed_in? %>
	<div class="container">
		<div class="col-xs-12">
			<table class="table lighter">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th>Opportunity</th>
						<th>Hiring Status</th>
						<th>Recent Position(s)</th>
					</tr>
				</thead>
				<% @flies.each do |fly| %>
				<tr>
					<td><%= image_tag("boarding.gif", class: "boarding") if fly.airline.has_active_recruitment? %></td>
					<td><%= image_tag fly.airline.logo, class: "airlines-index-logo" %></td>
					<td><%= link_to fly.name, airline_fly_path(fly.airline, fly) %></td>
					<td><%= "Active" if fly.airline.has_active_recruitment? %></td>
					<td></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
<% else %>
	<div class="container">
		<div class="col-xs-12">
			<p>SHOW HOMEPAGE</p>
		</div>
	</div>
<% end %>