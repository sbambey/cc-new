<div class="page-masthead">
  <div class="container">
    <nav class="page-nav">
      <a class="page-nav-item <%= active?(root_path) %>" href="<%= root_path %>">JobBoard</a>
      <a class="page-nav-item <%= active?("") %>" href="#">Job Alerts</a>
      
      <% if user_signed_in? %>
        <a class="page-nav-item <%= active?(edit_user_registration_path) %>" href="<%= edit_user_registration_path %>">
          Edit personal information
        </a>
        <% if current_user.try(:admin?) %>
          <%= link_to "Admin Panel", admin_panel_home_path, class: "page-nav-item #{active?(admin_panel_home_path)}" %>
        <% end %>
        <div class="navbar-right">
          <p class="navbar-text">
            Logged in as <em><%= link_to current_user.full_name, edit_user_registration_path %></em>
          </p>
          <%= link_to "Logout", destroy_user_session_path, :method => :delete, class: "btn btn-default btn-sm btn-navbar" %>
        </div>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "page-nav-item #{active?(new_user_session_path)}" %>
        <%= link_to "Register", new_user_registration_path, class: "page-nav-item #{active?(new_user_registration_path)}" %>
        <p class="navbar-text navbar-right">
      	 Click here to be informed about new opportunities.
        </p>
      <% end %>
    </nav>
  </div>
</div>